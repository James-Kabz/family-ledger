generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

model Contribution {
  id            String   @id @default(cuid())
  name          String
  amount        Int
  ref           String?  @unique
  pledged       Boolean  @default(false)
  contributedAt DateTime
  note          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([contributedAt(sort: Desc)])
}

model LedgerUpdate {
  id               String   @id @default(cuid())
  cutoffAt         DateTime
  generatedMessage String
  createdAt        DateTime @default(now())

  @@index([cutoffAt(sort: Desc)])
}

model Expense {
  id        String   @id @default(cuid())
  title     String
  amount    Int
  spentAt   DateTime
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([spentAt(sort: Desc)])
}

model ExpenseUpdate {
  id               String   @id @default(cuid())
  generatedMessage String
  createdAt        DateTime @default(now())

  @@index([createdAt(sort: Desc)])
}
